# Change these at your peril:
export PROJECT_NAME=escoe_workshop_labelling
export REPO_NAME=escoe_workshop_labelling
export DESCRIPTION=Data labelling and Machine Learning applications
export PROJECT_OPENNESS=public
export ENVIRONMENT_TYPE=uv

VENV_PATH=.venv


# uv configuration
ENV_CREATE=uv venv ${VENV_PATH}
ENV_ACTIVATE=source ${VENV_PATH}/bin/activate
ENV_DEACTIVATE=deactivate
ENV_REMOVE=rm -rf ${VENV_PATH}
ENV_UPDATE=uv pip install ".[dev]"
ENV_INSTALL_EXTRAS=true

